{% extends 'base.html.twig' %}

{% block title %}TODOs PostIt! - {{ submit_label }}{% endblock %}

{% block body %}
<div class="min-h-[80vh] flex items-center justify-center">
    <div class="max-w-2xl w-full">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="bg-gradient-to-r from-yellow-400 to-orange-400 p-6 text-center">
                <div class="flex items-center justify-center mb-2">
                    <i class="fas fa-tags fa-4x text-white"></i>
                </div>
                <h1 class="text-2xl font-bold text-white">{{ 'Edit' in submit_label ? 'Edit Tag' : 'Create a New Tag' }}</h1>
                <p class="text-white text-opacity-90 text-sm mt-1">{{ 'Edit' in submit_label ? 'Update your tag information' : 'Add a new tag to organize your post-its' }}</p>
            </div>

            <div class="p-8">
                {% if form_errors(form) %}
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded mb-6" role="alert">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-circle mr-2"></i>
                            <div>{{ form_errors(form) }}</div>
                        </div>
                    </div>
                {% endif %}

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="{{ form.name.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-tag mr-1 text-gray-400"></i>
                            Tag Name
                        </label>
                        <div class="relative">
                            {{ form_widget(form.name, {
                                'attr': {
                                    'class': 'w-full pl-3 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all',
                                    'placeholder': 'e.g., Urgent, Work, Personal...'
                                }
                            }) }}
                        </div>
                        {{ form_errors(form.name) }}
                    </div>

                    <div>
                        <label for="{{ form.color.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-palette mr-1 text-gray-400"></i>
                            Color
                        </label>
                        {{ form_widget(form.color, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all appearance-none font-bold'
                            }
                        }) }}
                        {{ form_errors(form.color) }}
                    </div>
                </div>

                <button type="submit" class="w-full bg-gradient-to-r from-yellow-400 to-orange-400 hover:from-yellow-500 hover:to-orange-500 text-white font-bold py-3 rounded-lg shadow-lg transition-all duration-200 transform hover:scale-105 flex items-center justify-center">
                    <i class="fas fa-{{ 'Edit' in submit_label ? 'check' : 'plus' }} mr-2"></i>
                    {{ submit_label }}
                </button>

                {{ form_end(form) }}

                <div class="text-center pt-6 border-t border-gray-200">
                    <p class="text-gray-600">
                        <a href="{{ path('app_tag') }}" class="text-yellow-600 hover:text-yellow-700 font-semibold transition-colors">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Back to tags list
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
