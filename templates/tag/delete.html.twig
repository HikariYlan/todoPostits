<form method="POST" action="{{ path('app_tag_delete', {id: tag.id}) }}" onsubmit="return confirm('⚠️ Are you sure you want to delete this tag?');" class="inline">
    <button type="submit">
        <i class="fas fa-trash-alt me-1"></i>
    </button>
    <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}">
</form>
