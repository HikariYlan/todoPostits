{% extends 'base.html.twig' %}

{% block title %}TODOs PostIt! - Random Game{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
        <div class="bg-gradient-to-r from-cyan-500 to-teal-500 p-8 text-center">
            <h1 class="text-4xl font-bold text-white mb-2">Your Random Game!</h1>
            <p class="text-cyan-100 text-lg">Time to play and have fun!</p>
        </div>

        <div class="p-8">
            <div class="flex items-center justify-center mb-8">
                <div class="bg-gradient-to-br from-cyan-100 to-teal-100 rounded-2xl p-8 shadow-inner">
                    <img src="{{ getImage(game.appid, game.img_icon_url) }}"
                         alt="{{ game.name }}"
                         class="w-32 h-32 object-contain">
                </div>
            </div>

            <h2 class="text-3xl font-bold text-gray-800 text-center mb-4">{{ game.name }}</h2>

            <div class="flex justify-center mb-8">
                <a href="steam://run/{{ game.appid }}" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-slate-700 to-slate-800 hover:from-slate-800 hover:to-slate-900 text-white font-semibold rounded-lg shadow-lg transition-all duration-200 transform hover:scale-105">
                    <img src="{{ asset('images/Steam_icon_logo.svg') }}" alt="steam_logo" class="w-5 h-5 mr-2">
                    Launch the game
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div class="bg-gradient-to-br from-cyan-50 to-cyan-100 rounded-xl p-6 border-l-4 border-cyan-500">
                    <div class="flex items-center mb-3">
                        <span class="text-sm font-semibold text-cyan-700 uppercase"><i class="fa-regular fa-clock fa-xl me-1"></i> Total Playtime</span>
                    </div>
                    {% set hours = (game.playtime_forever / 60)|round(0, 'floor') %}
                    {% set minutes = game.playtime_forever % 60 %}
                    <p class="text-3xl font-bold text-gray-800">
                        {% if hours > 0 %}
                            {{ hours }}<span class="text-xl text-gray-600">h</span>
                            {% if minutes > 0 %}
                                {{ minutes }}<span class="text-xl text-gray-600">m</span>
                            {% endif %}
                        {% else %}
                            {{ minutes }}<span class="text-xl text-gray-600"> minutes</span>
                        {% endif %}
                    </p>
                    <p class="text-sm text-gray-600 mt-1">{{ game.playtime_forever }} minutes total</p>
                </div>

                <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-xl p-6 border-l-4 border-teal-500">
                    <div class="flex items-center mb-3">
                        <span class="text-sm font-semibold text-teal-700 uppercase"><i class="fa-solid fa-tag fa-xl me-1"></i> App ID</span>
                    </div>
                    <p class="text-3xl font-bold text-gray-800">{{ game.appid }}</p>
                    <p class="text-sm text-gray-600 mt-1">Steam Application ID</p>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="{{ path('app_game_random') }}" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-cyan-500 to-teal-500 text-white font-bold rounded-lg shadow-lg hover:from-cyan-600 hover:to-teal-600 transition-all duration-200 transform hover:scale-105">
                    <i class="fa-solid fa-arrows-rotate me-1"></i>
                    Pick another game!
                </a>
                <a href="{{ path('app_game') }}" class="inline-flex items-center justify-center px-8 py-4 bg-white text-cyan-600 font-bold rounded-lg shadow-lg hover:bg-gray-100 border-2 border-cyan-500 transition-all duration-200 transform hover:scale-105">
                    <i class="fa-solid fa-bars me-1"></i>
                    View all games
                </a>
            </div>

            <div class="text-center pt-6 mt-6 border-t border-gray-200">
                <a href="{{ path('app_sticky_board') }}" class="text-cyan-600 font-semibold hover:text-cyan-700 transition-colors">
                    <i class="fa-solid fa-long-arrow-left me-1"></i> Back to sticky notes board
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
