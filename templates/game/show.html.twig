{% extends 'base.html.twig' %}

{% block title %}TODOs PostIt! - Random Game{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
        <div class="bg-gradient-to-r from-cyan-500 to-teal-500 p-8 text-center">
            <svg class="w-20 h-20 mx-auto mb-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            <h1 class="text-4xl font-bold text-white mb-2">üéâ Your Random Game!</h1>
            <p class="text-cyan-100 text-lg">Time to play and have fun!</p>
        </div>

        <div class="p-8">
            <div class="flex items-center justify-center mb-8">
                <div class="bg-gradient-to-br from-cyan-100 to-teal-100 rounded-2xl p-8 shadow-inner">
                    <img src="{{ getImage(game.appid, game.img_icon_url) }}"
                         alt="{{ game.name }}"
                         class="w-32 h-32 object-contain">
                </div>
            </div>

            <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">{{ game.name }}</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div class="bg-gradient-to-br from-cyan-50 to-cyan-100 rounded-xl p-6 border-l-4 border-cyan-500">
                    <div class="flex items-center mb-3">
                        <svg class="w-6 h-6 mr-2 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-sm font-semibold text-cyan-700 uppercase">Total Playtime</span>
                    </div>
                    {% set hours = (game.playtime_forever / 60)|round(0, 'floor') %}
                    {% set minutes = game.playtime_forever % 60 %}
                    <p class="text-3xl font-bold text-gray-800">
                        {% if hours > 0 %}
                            {{ hours }}<span class="text-xl text-gray-600">h</span>
                            {% if minutes > 0 %}
                                {{ minutes }}<span class="text-xl text-gray-600">m</span>
                            {% endif %}
                        {% else %}
                            {{ minutes }}<span class="text-xl text-gray-600"> minutes</span>
                        {% endif %}
                    </p>
                    <p class="text-sm text-gray-600 mt-1">{{ game.playtime_forever }} minutes total</p>
                </div>

                <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-xl p-6 border-l-4 border-teal-500">
                    <div class="flex items-center mb-3">
                        <svg class="w-6 h-6 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        <span class="text-sm font-semibold text-teal-700 uppercase">App ID</span>
                    </div>
                    <p class="text-3xl font-bold text-gray-800">{{ game.appid }}</p>
                    <p class="text-sm text-gray-600 mt-1">Steam Application ID</p>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="{{ path('app_games_random') }}" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-cyan-500 to-teal-500 text-white font-bold rounded-lg shadow-lg hover:from-cyan-600 hover:to-teal-600 transition-all duration-200 transform hover:scale-105">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Pick another game!
                </a>
                <a href="{{ path('app_games') }}" class="inline-flex items-center justify-center px-8 py-4 bg-white text-cyan-600 font-bold rounded-lg shadow-lg hover:bg-gray-100 border-2 border-cyan-500 transition-all duration-200 transform hover:scale-105">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                    </svg>
                    View all games
                </a>
            </div>

            <div class="text-center pt-6 mt-6 border-t border-gray-200">
                <a href="{{ path('app_sticky_board') }}" class="text-cyan-600 font-semibold hover:text-cyan-700 transition-colors">
                    ‚Üê Back to sticky notes board
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
