{% extends 'base.html.twig' %}

{% block title %}TODOs PostIt! - Game Library{% endblock %}

{% block body %}
<div class="mb-8 text-center">
    <h1 class="text-4xl font-bold text-gray-800 mb-2">ðŸŽ® My Game Library</h1>
    <p class="text-gray-600">Pick a random game from your Steam library</p>
</div>

{% if not app.user.steamID %}
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="p-8 text-center">
                <svg class="w-24 h-24 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h2 class="text-3xl font-bold text-gray-800 mb-2">No Account Found</h2>
                <p class="text-gray-600 text-lg mb-6">
                    No Steam account linked. Connect your Steam account to see your games!
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a href="{{ path('app_steam_auth') }}" class="transition-all duration-200 transform hover:scale-105">
                        <img src="{{ asset('images/steam_button.png') }}" alt="Sign in through Steam" class="h-10">
                    </a>
                    <a href="{{ path('app_sticky_board') }}" class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-cyan-500 to-teal-500 text-white font-semibold rounded-lg shadow-lg hover:from-cyan-600 hover:to-teal-600 transition-all duration-200 transform hover:scale-105">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to sticky notes board
                    </a>
                </div>
            </div>
        </div>
    </div>
{% elseif games is empty %}
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="p-8 text-center">
                <svg class="w-24 h-24 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h2 class="text-3xl font-bold text-gray-800 mb-2">No Games Found</h2>
                <p class="text-gray-600 text-lg mb-6">
                    Your Steam account is linked but no games were found. Your game library might be private or empty.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a href="{{ path('app_steam_unlink') }}" class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 text-white font-semibold rounded-lg shadow-lg hover:from-red-600 hover:to-red-700 transition-all duration-200 transform hover:scale-105" onclick="return confirm('Are you sure you want to unlink your Steam account?')">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        Unlink Steam Account
                    </a>
                    <a href="{{ path('app_sticky_board') }}" class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-cyan-500 to-teal-500 text-white font-semibold rounded-lg shadow-lg hover:from-cyan-600 hover:to-teal-600 transition-all duration-200 transform hover:scale-105">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to sticky notes board
                    </a>
                </div>
            </div>
        </div>
    </div>
{% else %}
    {% if not task_finished %}
        <div class="max-w-4xl mx-auto mb-6">
            <div class="bg-amber-50 border-l-4 border-amber-400 rounded-lg p-4 shadow-md">
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-amber-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                    <div>
                        <p class="text-amber-800 font-semibold">No tasks finished today!</p>
                        <p class="text-amber-700 text-sm">Complete a task to unlock the random game picker.</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="max-w-6xl mx-auto mb-8">
        <div class="bg-gradient-to-r from-cyan-500 to-teal-500 rounded-2xl shadow-xl p-6">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center space-x-4">
                    <img src="{{ avatar }}" alt="Steam Avatar" class="w-16 h-16 rounded-full shadow-md border-2 border-white">
                    <div>
                        <p class="text-cyan-100 text-sm uppercase font-semibold">Steam Account</p>
                        <p class="text-white text-xl font-bold">{{ username }}</p>
                    </div>
                    <a href="{{ path('app_steam_unlink') }}" class="text-cyan-100 hover:text-white text-sm underline transition-colors" onclick="return confirm('Are you sure to unlink your Steam account?')">
                        Unlink
                    </a>
                </div>
                <div class="text-center">
                    <p class="text-white text-lg">
                        <span class="font-bold text-3xl">{{ games|length }}</span> games
                    </p>
                </div>
                <a href="{{ path(task_finished ? 'app_games_random' : 'app_post_it_random') }}" class="inline-flex items-center px-8 py-4 bg-white text-cyan-600 font-bold rounded-lg shadow-lg hover:bg-gray-100 transition-all duration-200 transform hover:scale-105">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        {% if task_finished %}
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        {% else %}
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                        {% endif %}
                    </svg>
                    {{ task_finished ? 'Pick a random game!' : 'Pick a random task!' }}
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        {% for game in games|sort((a, b) => a.playtime_forever < b.playtime_forever) %}
            {{ include('game/_show.html.twig', {game: game}) }}
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
