{% extends 'base.html.twig' %}

{% block title %}TODOs PostIt! - Game Library{% endblock %}

{% block body %}
<div class="mb-8 text-center">
    <h1 class="text-4xl font-bold text-gray-800 mb-2"><i class="fa-solid fa-gamepad"></i> My Game Library</h1>
    <p class="text-gray-600">Pick a random game from your Steam library</p>
</div>

{% if not app.user.steamID %}
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="p-8 text-center">
                <i class="fa-solid fa-circle-exclamation fa-6x text-gray-400"></i>
                <h2 class="text-3xl font-bold text-gray-800 mb-2">No Account Found</h2>
                <p class="text-gray-600 text-lg mb-6">
                    No Steam account linked. Connect your Steam account to see your games!
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a href="{{ path('app_steam_auth') }}" class="transition-all duration-200 transform hover:scale-105">
                        <img src="{{ asset('images/steam_button.png') }}" alt="Sign in through Steam" class="h-10">
                    </a>
                    <a href="{{ path('app_sticky_board') }}" class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-teal-500 to-cyan-500 text-white font-semibold rounded-lg shadow-lg hover:from-cyan-600 hover:to-teal-600 transition-all duration-200 transform hover:scale-105">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to sticky notes board
                    </a>
                </div>
            </div>
        </div>
    </div>
{% elseif games is empty %}
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="p-8 text-center">
                <i class="fa-regular fa-face-frown fa-6x text-gray-400"></i>
                <h2 class="text-3xl font-bold text-gray-800 mb-2">No Games Found</h2>
                <p class="text-gray-600 text-lg mb-6">
                    Your Steam account is linked but no games were found. Your game library might be private or empty.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a href="{{ path('app_steam_unlink') }}" class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 text-white font-semibold rounded-lg shadow-lg hover:from-red-600 hover:to-red-700 transition-all duration-200 transform hover:scale-105" onclick="return confirm('Are you sure you want to unlink your Steam account?')">
                        <i class="fa-solid fa-arrow-right-from-bracket me-1"></i>
                        Unlink Steam Account
                    </a>
                    <a href="{{ path('app_sticky_board') }}" class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-teal-500 to-cyan-500 text-white font-semibold rounded-lg shadow-lg hover:from-cyan-600 hover:to-teal-600 transition-all duration-200 transform hover:scale-105">
                        <i class="fa-solid fa-arrow-left me-1"></i>
                        Back to sticky notes board
                    </a>
                </div>
            </div>
        </div>
    </div>
{% else %}
    {% if task_finished|length < tasks_required %}
        <div class="max-w-4xl mx-auto mb-6">
            <div class="bg-amber-50 border-l-4 border-amber-400 rounded-lg p-4 shadow-md">
                <div class="flex items-center">
                    <i class="fa-solid fa-triangle-exclamation me-1 text-amber-400"></i>
                    <div>
                        <p class="text-amber-800 font-semibold">{{ task_finished|length }}/{{ tasks_required}} tasks finished today!</p>
                        <p class="text-amber-700 text-sm">Complete {{ tasks_required-task_finished|length }} task(s) to unlock the random game picker.</p>
                        <p class="text-amber-600 text-sm underline"><a href="{{ path('app_user_settings') }}">Change how many tasks you need to finish here</a></p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="max-w-6xl mx-auto mb-8">
        <div class="bg-gradient-to-r from-teal-500 to-cyan-500 rounded-2xl shadow-xl p-6">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center space-x-4">
                    <img src="{{ avatar }}" alt="Steam Avatar" class="w-16 h-16 rounded-full shadow-md border-2 border-white">
                    <div>
                        <p class="text-cyan-100 text-sm uppercase font-semibold">Steam Account</p>
                        <p class="text-white text-xl font-bold">{{ username }}</p>
                    </div>
                    <a href="{{ path('app_steam_unlink') }}" class="text-cyan-100 hover:text-white text-sm underline transition-colors" onclick="return confirm('Are you sure to unlink your Steam account?')">
                        Unlink
                    </a>
                </div>
                <div class="text-center">
                    <p class="text-white text-lg">
                        <span class="font-bold text-3xl">{{ games|length }}</span> games
                    </p>
                </div>
                <a href="{{ path(task_finished ? 'app_game_random' : 'app_post_it_random') }}" class="inline-flex items-center px-8 py-4 bg-white text-cyan-600 font-bold rounded-lg shadow-lg hover:bg-gray-100 transition-all duration-200 transform hover:scale-105">
                    {% if task_finished|length >= tasks_required %}
                        <i class="fa-solid fa-rocket fa-xl me-1"></i>
                    {% else %}
                        <i class="fa-solid fa-clipboard-question fa-xl me-1"></i>
                    {% endif %}
                    {{ task_finished|length >= tasks_required ? 'Pick a random game!' : 'Pick a random task!' }}
                </a>
            </div>
        </div>
    </div>

    {% if task_finished|length >= tasks_required %}
    <div class="mb-8 text-center">
        <h1 class="text-2xl font-bold text-gray-800 mb-2">Want to play a particular game?</h1>
        <p class="text-gray-600">You can click on any card below to directly launch the game!</p>
    </div>
    {% endif %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        {% for game in games|sort((a, b) => a.playtime_forever < b.playtime_forever) %}
            {{ include('game/_show.html.twig', {game: game, task_finished: task_finished, tasks_required: tasks_required}) }}
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
