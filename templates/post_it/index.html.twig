{% extends 'base.html.twig' %}

{% block title %}TODOs PostIt! - Sticky Notes Board{% endblock %}

{% block body %}

<div class="mb-8 text-center">
    <h1 class="text-4xl font-bold text-gray-800 mb-2">My Sticky Notes Board</h1>
    <p class="text-gray-600">Organize your tasks with style</p>
</div>

{% if pending is empty and toDo is empty and onGoing is empty and finished is empty %}
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="p-12 text-center">
                <i class="fa-solid fa-note-sticky fa-7x text-gray-300"></i>
                <h2 class="text-3xl font-bold text-gray-800 mb-3">No Post-Its Yet!</h2>
                <p class="text-gray-600 text-lg mb-8">
                    Your sticky notes board is empty. Start organizing your tasks by creating your first post-it!
                </p>
                <a href="{{ path('app_postit_create') }}" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-bold text-lg rounded-lg shadow-lg hover:from-green-600 hover:to-emerald-600 transition-all duration-200 transform hover:scale-105">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Stick a new Post-It!
                </a>
            </div>
        </div>
    </div>
{% else %}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-white rounded-xl shadow-lg p-6 border-t-4 border-gray-400">
        <div class="flex items-center justify-center mb-4">
            <div class="bg-gray-200 rounded-full p-3">
                <i class="fa-regular fa-clock fa-2x text-gray-500"></i>
            </div>
        </div>
        <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">PENDING</h2>
        <div class="space-y-3 min-h-[100px]" data-controller="sortable" data-sortable-status-value="PENDING">
            {{ include('post_it/_show.html.twig', {postIts: pending, status: 'pending'}) }}
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 border-t-4 border-blue-400">
        <div class="flex items-center justify-center mb-4">
            <div class="bg-blue-100 rounded-full p-3">
                <i class="fa-solid fa-clipboard-list fa-2x text-blue-500"></i>
            </div>
        </div>
        <h2 class="text-2xl font-bold text-center text-blue-700 mb-4">TO DO</h2>
        <div class="space-y-3 min-h-[100px]" data-controller="sortable" data-sortable-status-value="TO DO">
            {{ include('post_it/_show.html.twig', {postIts: toDo, status: 'todo'}) }}
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 border-t-4 border-orange-400">
        <div class="flex items-center justify-center mb-4">
            <div class="bg-orange-100 rounded-full p-3">
                <i class="fa-solid fa-bolt fa-2x text-orange-500"></i>
            </div>
        </div>
        <h2 class="text-2xl font-bold text-center text-orange-700 mb-4">ON GOING</h2>
        <div class="space-y-3 min-h-[100px]" data-controller="sortable" data-sortable-status-value="ON GOING">
            {{ include('post_it/_show.html.twig', {postIts: onGoing, status: 'ongoing'}) }}
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 border-t-4 border-green-400">
        <div class="flex items-center justify-center mb-4">
            <div class="bg-green-100 rounded-full p-3">
                <i class="fa-regular fa-circle-check fa-2x text-green-500"></i>
            </div>
        </div>
        <h2 class="text-2xl font-bold text-center text-green-700 mb-4">FINISHED</h2>
        <div class="space-y-3 min-h-[100px]" data-controller="sortable" data-sortable-status-value="FINISHED">
            {{ include('post_it/_show.html.twig', {postIts: finished, status: 'finished'}) }}
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
